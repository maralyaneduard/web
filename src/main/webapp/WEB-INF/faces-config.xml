<?xml version="1.0"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
            http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">  
  
    <application>      
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>                  
    </application>
    <application>
     
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>                 
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>                 
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/portal/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>postContent</from-outcome>
            <to-view-id>/portal/postContent.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>postContentEdit</from-outcome>
            <to-view-id>/portal/postContentEdit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>postDelete</from-outcome>
            <to-view-id>/portal/userPosts.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>posts</from-outcome>
            <to-view-id>/portal/posts.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>